{
	// Our jshint configuration file
	// For all possible options see jshint.com/docs/options/

	// Enforcing
	"curly": 			true,
	"eqeqeq": 		true,
	"immed": 			true,
	"noarg": 			true,
	"freeze": 		true,
	"maxdepth":		5,
	"undef": 			true,
	"unused": 		true,
	"maxerr":			20,
	"nonew":			true,

	// Relaxing
	"eqnull": 		true,
	"sub":				true,

	// Environments
	"node": 			true,
	"jquery":			true,
	"browser":		true,

	// Custom
	"globals"   : {
	 // Mocha
	 "should"			:	false,
	 "describe"   : false,
	 "it"         : false,
	 "before"     : false,
	 "beforeEach" : false,
	 "after"      : false,
	 "afterEach"  : false
 }
}
